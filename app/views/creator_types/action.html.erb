<%= crud_header @creator_type %>

<% form_for @creator_type do |form| %>
  <dl>
    <dd><%= form.label :creator_type, :name %></dd>
    <dt><%= form.text_field :name %></dt>
    <dd><%= form.label :creator_type, :item_type_id%></dd>
    <dt><%= form.select :item_type_id, @item_types.map {|item_type| [item_type.name, item_type.id]} %></dt>
  </dl>
  <%= crud_submit(@creator_type) %>
<% end %>