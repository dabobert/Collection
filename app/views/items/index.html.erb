<h2>Items</h2>

<ul id="actions">
	<li><%= link_to "new item", new_item_path %></li>
</ul>

<table>
	<thead>
		<th>Name</th>
		<th>Type</th>
		<th>Rating</th>
	</thead>
	<tbody>
		<% @items.each do |item| %>
			<tr>
				<td><%= link_to item.name, edit_item_path(item) %></td>
				<td><%= item.item_type.name unless item.item_type.nil? %></td>
				<td><%= item.rating %></td>
			</tr>
		<% end %>
	</tbody>
</table>